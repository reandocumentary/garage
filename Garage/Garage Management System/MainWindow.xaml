<Window x:Class="Garage_Management_System.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Garage_Management_System"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        x:Name="FrmMain"
        Title="MainWindow"
        Width="1024"
        Height="700"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Loaded="MainWindow_Loaded"
        mc:Ignorable="d">
    <Grid Background="{StaticResource _system_bg_color}" Cursor="Hand">
        <DockPanel LastChildFill="True">
            <Grid
                Grid.Row="1"
                Height="35"
                VerticalAlignment="Top"
                Background="{StaticResource title_brush}"
                DockPanel.Dock="Top">
                <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                    <Menu
                        x:Name="_top_menu"
                        Background="{StaticResource title_brush}"
                        DockPanel.Dock="Top">

                        <!--  Start: file menu  -->
                        <MenuItem
                            x:Name="_File"
                            Margin="5,5,5,5"
                            Header="_File"
                            Style="{StaticResource top_menu}">
                            <MenuItem.Icon>
                                <materialDesign:PackIcon Kind="Home" />
                            </MenuItem.Icon>

                            <MenuItem
                                x:Name="_user_profile"
                                Header="_User Profile"
                                Style="{StaticResource sub_menu}">
                                <MenuItem.Icon>
                                    <materialDesign:PackIcon Kind="account" />
                                </MenuItem.Icon>
                            </MenuItem>

                            <MenuItem
                                x:Name="_report"
                                Header="_Report"
                                Style="{StaticResource sub_menu}">
                                <MenuItem.Icon>
                                    <materialDesign:PackIcon Kind="ReportBar" />
                                </MenuItem.Icon>
                            </MenuItem>

                            <MenuItem
                                x:Name="_logout_app"
                                Header="_Log out"
                                Click="_logout_app_Click"
                                Style="{StaticResource sub_menu}"
                                Visibility="Visible">
                                <MenuItem.Icon>
                                    <materialDesign:PackIcon Kind="ExitToApp" />
                                </MenuItem.Icon>
                            </MenuItem>

                            <MenuItem
                                x:Name="_exit_app"
                                Header="_Exit"
                                Click="_exit_app_Click"
                                Style="{StaticResource sub_menu}">
                                <MenuItem.Icon>
                                    <materialDesign:PackIcon Kind="Close" />
                                </MenuItem.Icon>
                            </MenuItem>

                        </MenuItem>
                        <!--  End: file menu  -->

                        <!--  Start: _POS menu  -->
                        <MenuItem
                            x:Name="_POS"
                            Margin="5,5,5,5"
                            Header="_POS"
                            Style="{StaticResource top_menu}">
                            <MenuItem.Icon>
                                <materialDesign:PackIcon Kind="TicketUser" />
                            </MenuItem.Icon>

                            <MenuItem
                                x:Name="_pos"
                                Header="POS"
                                Style="{StaticResource sub_menu}" />

                        </MenuItem>
                        <!--  End: _POS menu  -->

                        <!--  Start: Authorize menu  -->
                        <MenuItem
                            x:Name="_Authorize"
                            Margin="5,5,5,5"
                            Header="_Authorize"
                            Style="{StaticResource top_menu}">
                            <MenuItem.Icon>
                                <materialDesign:PackIcon Kind="BellCheck" />
                            </MenuItem.Icon>

                            <MenuItem
                                x:Name="_authorize_pos"
                                Header="_Authorize POS"
                                Style="{StaticResource sub_menu}" />

                            <MenuItem
                                x:Name="_authorize_return_pos"
                                Header="_Return POS"
                                Style="{StaticResource sub_menu}" />

                        </MenuItem>
                        <!--  End: _POS menu  -->


                        <MenuItem
                            x:Name="_Tools"
                            Margin="5,5,5,5"
                            Header="_Tools"
                            Style="{StaticResource top_menu}">
                            <MenuItem.Icon>
                                <materialDesign:PackIcon Kind="ToolboxOutline" />
                            </MenuItem.Icon>

                            <MenuItem
                                x:Name="_create_product_line"
                                Header="Product line"
                                Style="{StaticResource sub_menu}" />
                            <MenuItem
                                x:Name="_create_product"
                                Header="Register Product"
                                Click="Register_product"
                                Style="{StaticResource sub_menu}" />

                        </MenuItem>
                        <!--  End: _Ticket menu  -->

                        <!--  Start:  Setting menu  -->
                        <MenuItem
                            x:Name="_Setting"
                            Margin="5,5,5,5"
                            Header="_Setting"
                            Style="{StaticResource top_menu}">
                            <MenuItem.Icon>
                                <materialDesign:PackIcon Kind="Settings" />
                            </MenuItem.Icon>

                            <MenuItem
                                x:Name="_register_users"
                                Header="Register user"
                                Style="{StaticResource sub_menu}">
                                <MenuItem.Icon>
                                    <materialDesign:PackIcon Kind="Register" />
                                </MenuItem.Icon>
                            </MenuItem>


                        </MenuItem>
                        <!--  End: Setting menu  -->
                        <!-- <MenuItem Header="_About" Margin="5,5,5,5" Foreground="{StaticResource top_menu_brush}" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="16" FontFamily="Fira Code">-->

                        <MenuItem
                            x:Name="_About"
                            Margin="5,5,5,5"
                            Header="_About"
                            Style="{StaticResource top_menu}">

                            <MenuItem.Icon>
                                <materialDesign:PackIcon Kind="About" />
                            </MenuItem.Icon>

                            <MenuItem
                                x:Name="_about_me"
                                Header="About me"
                                 Click="_About_Click"
                                Style="{StaticResource sub_menu}" >
                                
                            </MenuItem>

                            <MenuItem
                                x:Name="FrmSystemUpdate"
                                Header="System Update"
                                 Click="RFrmSystemUpdate_Click"
                                Style="{StaticResource sub_menu}" >

                            </MenuItem>

                        </MenuItem>
                    </Menu>

                    <ContentControl x:Name="ViewWindow" Margin="10" />
                </StackPanel>
            </Grid>
            <Grid
                x:Name="showfrm"
                Grid.Row="2"
                Margin="10,10,10,10"
                HorizontalAlignment="Left"
                Background="{StaticResource _system_bg_color}"
                ShowGridLines="False">

                <!--  Show pages in main form  -->
                <Frame
                    x:Name="frame"
                    Margin="50,10,0,0"
                    HorizontalAlignment="Left"
                    NavigationUIVisibility="Hidden" />

            </Grid>

        </DockPanel>


    </Grid>

</Window>
