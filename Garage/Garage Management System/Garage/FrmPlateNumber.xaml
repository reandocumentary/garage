<Page x:Class="Garage_Management_System.Garage.FrmPlateNumber"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Garage_Management_System.Garage"
      Title="FrmPlateNumber"
       xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        d:DesignHeight="600"
        d:DesignWidth="580"
        Background="{x:Null}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        mc:Ignorable="d">


    <Grid VerticalAlignment="Top">
        <materialDesign:Card
            Margin="20,10,10,20"
            materialDesign:ShadowAssist.ShadowDepth="Depth1"
            Background="{StaticResource _system_bg_color}"
            UniformCornerRadius="15">

            <materialDesign:DialogHost x:Name="frmregister" CloseOnClickAway="True">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="600" />
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="360" />
                        <ColumnDefinition Width="200" />
                    </Grid.ColumnDefinitions>


                    <Grid
                        Grid.Row="0"
                        Grid.Column="0"
                        HorizontalAlignment="Left">
                        <StackPanel
                            Width="350"
                            Margin="10,10,0,0"
                            HorizontalAlignment="Left">

                            <TextBlock
                                Margin="10,5,0,5"
                                HorizontalAlignment="Center"
                                FontFamily="{StaticResource _text_font}"
                                FontSize="22"
                                FontWeight="SemiBold"
                                Foreground="{StaticResource top_menu_brush}"
                                Text="Register Plate Number " />
                            <TextBox
                                x:Name="txtplate_id"
                                Width="300"
                                Margin="25,10,25.4,0"
                                materialDesign:HintAssist.Foreground="{StaticResource Hint_brush}"
                                materialDesign:HintAssist.Hint="Plate ID"
                                BorderBrush="{StaticResource input_brush}"
                                FontFamily="{StaticResource _text_font}"
                                FontSize="14"
                                Foreground="{StaticResource txt_color}"
                                Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                            <TextBox
                                x:Name="txttitle"
                                Width="300"
                                Margin="25,10,25.4,0"
                                materialDesign:HintAssist.Foreground="{StaticResource Hint_brush}"
                                materialDesign:HintAssist.Hint="Plate Number"
                                BorderBrush="{StaticResource input_brush}"
                                FontFamily="{StaticResource _text_font}"
                                FontSize="14"
                                Foreground="{StaticResource txt_color}"
                                Style="{StaticResource MaterialDesignFloatingHintTextBox}" />

                            <ComboBox
                                x:Name="cboType"
                                Width="300"
                                Margin="0,20,0,0"
                                materialDesign:HintAssist.Foreground="{StaticResource Hint_brush}"
                                materialDesign:HintAssist.Hint="Plate Type"
                                BorderBrush="{StaticResource input_brush}"
                                FontFamily="{StaticResource _text_font}"
                                FontSize="14"
                                Foreground="{StaticResource txt_color}"
                                IsEditable="True"
                                IsTextSearchEnabled="True"
                                Style="{StaticResource MaterialDesignFloatingHintComboBox}" />
                            <ComboBox
                                x:Name="cboInactive"
                                Width="300"
                                Margin="0,20,0,0"
                                materialDesign:HintAssist.Foreground="{StaticResource Hint_brush}"
                                materialDesign:HintAssist.Hint="Inactive"
                                BorderBrush="{StaticResource input_brush}"
                                FontFamily="{StaticResource _text_font}"
                                FontSize="14"
                                Foreground="{StaticResource txt_color}"
                                IsEditable="True"
                                IsTextSearchEnabled="True"
                                Style="{StaticResource MaterialDesignFloatingHintComboBox}" />
                           

                            <TextBox
                                x:Name="txtremark"
                                Width="300"
                                Height="120"
                                Margin="25,10,25.4,0"
                                materialDesign:HintAssist.Foreground="{StaticResource Hint_brush}"
                                materialDesign:HintAssist.Hint="Remark"
                                AcceptsReturn="True"
                                BorderBrush="{StaticResource input_brush}"
                                FontFamily="{StaticResource _text_font}"
                                FontSize="14"
                                Foreground="{StaticResource _btn_color}"
                                Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                TextWrapping="Wrap"
                                VerticalScrollBarVisibility="Visible" />

                        </StackPanel>
                    </Grid>


                    <Grid
                        Grid.Row="0"
                        Grid.Column="2"
                        HorizontalAlignment="Left">
                        <StackPanel
                            Width="180"
                            Margin="0,40,0,0"
                            HorizontalAlignment="Right">

                            <materialDesign:PopupBox
                                Height="25"
                                Margin="0,5,5,0"
                                HorizontalAlignment="Right"
                                PlacementMode="BottomAndAlignRightEdges"
                                StaysOpen="False">
                                <StackPanel>
                                    <MenuItem
                                        x:Name="View_draft"
                                        FontFamily="{StaticResource _Kh_font}"
                                        FontSize="13"
                                        Header="បញ្ជីរក្សាទុក">
                                        <MenuItem.Icon>
                                            <materialDesign:PackIcon Kind="Paper" />
                                        </MenuItem.Icon>
                                    </MenuItem>

                                    <MenuItem
                                        x:Name="view_request"
                                        FontFamily="{StaticResource _Kh_font}"
                                        FontSize="13"
                                        Header="បញ្ជីសំណើផ្សេងៗ">
                                        <MenuItem.Icon>
                                            <materialDesign:PackIcon Kind="History" />
                                        </MenuItem.Icon>
                                    </MenuItem>


                                </StackPanel>
                            </materialDesign:PopupBox>


                            <Button
                                x:Name="btnNew"
                                Width="150"
                                Height="45"
                                Margin="10,30,0,0"
                                HorizontalAlignment="Left"
                                materialDesign:ButtonAssist.CornerRadius="10"
                                materialDesign:ShadowAssist.ShadowDepth="Depth0"
                                Background="{StaticResource _btn_color}"
                                Content="New"
                                FontSize="14"
                                Style="{StaticResource MaterialDesignFlatMidBgButton}" Click="btnNew_Click" />
                            <Button
                                x:Name="btnsave"
                                Width="150"
                                Height="45"
                                Margin="10,10,0,0"
                                HorizontalAlignment="Left"
                                materialDesign:ButtonAssist.CornerRadius="10"
                                materialDesign:ShadowAssist.ShadowDepth="Depth0"
                                Background="{StaticResource _btn_color}"
                                Content="Save"
                                FontSize="15"
                                Style="{StaticResource MaterialDesignFlatMidBgButton}" Click="btnCreate_Click" />
                            <Button
                                x:Name="btnEdit"
                                Width="150"
                                Height="45"
                                Margin="10,10,0,0"
                                HorizontalAlignment="Left"
                                materialDesign:ButtonAssist.CornerRadius="10"
                                materialDesign:ShadowAssist.ShadowDepth="Depth0"
                                Background="{StaticResource _btn_color}"
                                Content="Edit"
                                FontSize="14"
                                Style="{StaticResource MaterialDesignFlatMidBgButton}" Click="btnEdit_Click" />


                        </StackPanel>
                    </Grid>

                </Grid>
            </materialDesign:DialogHost>
        </materialDesign:Card>
    </Grid>
</Page>
