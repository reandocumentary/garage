<Window x:Class="Garage_Management_System.FrmSystem.FrmLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Garage_Management_System.FrmSystem"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        
       Title="Login"
    Width="444"
    Height="600"
    AllowsTransparency="True"
    Background="{x:Null}"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <materialDesign:Card
        Margin="20"
        materialDesign:ShadowAssist.ShadowDepth="Depth4"
        Background="{DynamicResource MaterialDesignPaper}"
        UniformCornerRadius="20">
        <materialDesign:DialogHost x:Name="DialogHost" CloseOnClickAway="True">
            <StackPanel Margin="10 10 10 10">
                <materialDesign:PopupBox
                    Height="25"
                    Margin="0,20,20,0"
                    HorizontalAlignment="Right"
                    PlacementMode="BottomAndAlignRightEdges"
                    StaysOpen="False">
                    <StackPanel >
                        <Button
                            x:Name="Btn_Help"
                            Content="Help Me"
                            ToolTip="Having Troubles in Logging In?" />
                        <Button
                            x:Name="Btn_Exit"
                            Content="Exit"
                            ToolTip="Close Application" />
                    </StackPanel>
                </materialDesign:PopupBox>

                <!--  load Logo GDT  -->
                <Image
                    Height="100"
                    Margin="0,10,0,5"
                    Source="../Assets/garage.ico" />
                <!--  End : load Logo GDT  -->
                

                <TextBlock
                    Margin="0,10,0,5"
                    HorizontalAlignment="Center"
                    FontSize="28"
                    FontWeight="Bold"
                    Text="Sign in to Garage !" />
                <TextBlock
                    HorizontalAlignment="Right"
                    Margin="0,0,60,0"
                    FontSize="17"
                    Text="With your existing user" />


                <TextBox
                    x:Name="txtUserlogin"
                    Width="300"
                    Margin="0,35,0,0"
                    materialDesign:HintAssist.Foreground="{StaticResource Hint_brush}"
                    materialDesign:HintAssist.Hint="Enter Username"
                    BorderBrush="{DynamicResource MaterialDesignDivider}"
                    BorderThickness="2"
                    FontSize="18"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}" />
                <PasswordBox
                    x:Name="txtPassword"
                    Width="300"
                    Margin="0,20,0,0"
                    materialDesign:HintAssist.Foreground="{StaticResource Hint_brush}"
                    materialDesign:HintAssist.Hint="Enter Password"
                    BorderBrush="{DynamicResource MaterialDesignDivider}"
                    BorderThickness="2"
                    FontSize="18"
                    Style="{StaticResource MaterialDesignOutlinedPasswordBox}" />

                <Button
                    x:Name="btnLogin"
                    Width="300"
                    Height="50"
                    Margin="0,20,0,0"
                    materialDesign:ButtonAssist.CornerRadius="10"
                    materialDesign:ShadowAssist.ShadowDepth="Depth0"
                    Content="SIGN IN"
                    FontSize="20"
                    Click="btnLogin_Click"
                    Style="{StaticResource MaterialDesignFlatMidBgButton}" />


            </StackPanel>
        </materialDesign:DialogHost>
    </materialDesign:Card>
</Window>
