<Page x:Class="Garage_Management_System.FrmSystem.FrmSystemUpdate"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Garage_Management_System.FrmSystem"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="update "
        d:DesignHeight="400"
        d:DesignWidth="500"
        Background="{x:Null}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
      Loaded="FrmSystemUpdate_Loaded"
        mc:Ignorable="d">

    <Grid VerticalAlignment="Top">
        <materialDesign:Card
            Margin="5,5,0,0"
            materialDesign:ShadowAssist.ShadowDepth="Depth0"
            Background="{StaticResource _system_bg_color}"
            UniformCornerRadius="15">
            <materialDesign:DialogHost x:Name="frmregister" CloseOnClickAway="True">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="500" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="500" />
                    </Grid.ColumnDefinitions>
                    <Grid
                        Grid.Row="0"
                        Grid.Column="0"
                        HorizontalAlignment="Left">
                        <StackPanel
                            Width="480"
                            Margin="5,10,0,0"
                            HorizontalAlignment="Left">

                            <TextBlock
                                x:Name="lbltitle"
                                Margin="10,5,0,5"
                                HorizontalAlignment="Center"
                                FontSize="22"
                                FontWeight="SemiBold"
                                Foreground="{StaticResource sub_top_menu_color}"
                                Text="Garage System" />
                            <TextBlock
                                x:Name="lblinternet"
                                Margin="10,5,0,5"
                                HorizontalAlignment="Center"
                                FontSize="15"
                                FontWeight="SemiBold"
                                Foreground="{StaticResource sub_top_menu_color}"
                                Text="checking internet " />

                            <TextBlock
                                Margin="10,5,0,5"
                                HorizontalAlignment="Center"
                                FontSize="10"
                                FontWeight="SemiBold"
                                FontFamily="Khmer OS"
                                Foreground="{StaticResource sub_top_menu_color}"
                                Text="Develop by : រៀនអាយធី REAN-iT  (Documentary)  " />



                        </StackPanel>
                    </Grid>



                </Grid>
            </materialDesign:DialogHost>
        </materialDesign:Card>
    </Grid>
</Page>
